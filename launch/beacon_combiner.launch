<launch>
    <arg name="vehicle"         default="H01"/>
    <arg name="enable_beacon"   default="1"/>
    <arg name="brd_0_en"        default='1'/>
    <arg name="brd_1_en"        default='0'/>

    <group ns="beacon_board_0" if="$(arg brd_0_en)">

        <!-- ROSSERIAL PYTHON -->
        <node pkg="rosserial_python" type="serial_node.py" name="beacon_dropper_0" output="log">
            <param name="port" value="/dev/beacon_brd_0"/>
        </node>
    </group>

    <group ns="beacon_board_1" if="$(arg brd_1_en)">
        <!-- ROSSERIAL PYTHON -->
        <node pkg="rosserial_python" type="serial_node.py" name="beacon_dropper_1" output="log">
            <param name="port" value="/dev/beacon_brd_1"/>
        </node>
    </group>

    <node pkg="combiner_node" type = "scripts/beacon_brd_combiner.py" name="combiner">
        <param name="vehicle_name" value = "$(arg vehicle)"/>
    </node>

</launch>